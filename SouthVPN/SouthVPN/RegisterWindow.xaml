<Window x:Class="SouthVPN.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrieren"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1F2A40"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- Exit Button oben rechts -->
        <Button Content="✕"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                FontSize="16"
                Click="CloseButton_Click"/>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,-100,0,0">

            <!-- Logo oben -->
            <Image Source="pic/Logo.png"
                   Width="160"
                   Height="160"
                   Margin="0,0,0,40"/>

            <!-- Registrierungsformular -->
            <Border Width="400"
                    Background="White"
                    CornerRadius="20"
                    Padding="30">
                <StackPanel>

                    <TextBlock Text="Registrieren"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#246795"
                               Margin="0,0,0,20"
                               TextAlignment="Center"/>

                    <TextBlock Text="Benutzername:"
                               FontSize="16"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="usernameBox"
                             Height="35"
                             FontSize="16"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Passwort:"
                               FontSize="16"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="passwordBox"
                                 Height="35"
                                 FontSize="16"
                                 Margin="0,0,0,20"/>

                    <Button Content="Registrieren"
                            Height="45"
                            Background="#246795"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16"
                            Margin="0,10,0,10"
                            Click="RegisterButton_Click"/>

                    <Button Content="Zurück zum Login"
                            Height="45"
                            Background="Transparent"
                            BorderBrush="#246795"
                            Foreground="#246795"
                            FontWeight="Bold"
                            FontSize="16"
                            Click="BackToLoginButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
