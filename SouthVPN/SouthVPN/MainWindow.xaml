<Window x:Class="SouthVPN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouthVPN"
        mc:Ignorable="d"
        Title="SouthVPN"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#f0f0f0">

    <Grid>
        <!-- Hauptlayout mit zwei Spalten -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Seite: Serverauswahl -->
            <Border Grid.Column="0" Background="#1F2A40" Padding="20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Wähle einen Server:"
                               Foreground="White"
                               FontSize="18"
                               Margin="0,0,0,10"/>

                    <ComboBox x:Name="ServerComboBox"
                              Width="220"
                              Height="35"
                              FontSize="14"
                              Margin="0,0,0,10">
                        <ComboBoxItem Content="Swiss-Test-Server"/>
                        <ComboBoxItem Content="Deutschland - Frankfurt"/>
                        <ComboBoxItem Content="USA - New York"/>
                    </ComboBox>

                    <Button Content="Verbinden"
                            Width="220"
                            Height="40"
                            Background="#246795"
                            Foreground="White"
                            Click="ConnectButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Rechte Seite: Hintergrundbild + Begrüßung -->
            <Grid Grid.Column="1">
                <Image Source="pic/main/background.png"
                       Stretch="UniformToFill"
                       Opacity="0.15"
                       Panel.ZIndex="0"/>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1">
                    <TextBlock Text="Willkommen bei SouthVPN"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#246795"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Verbinde dich sicher mit einem Server deiner Wahl."
                               FontSize="16"
                               Foreground="#444"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Overlay: Abmelden + Schließen oben rechts -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Panel.ZIndex="999">
            <StackPanel Orientation="Horizontal">
                <Button Content="Abmelden"
                        Width="100" Height="30"
                        Background="#246795"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="LogoutButton_Click"
                        ToolTip="Zurück zum Login"
                        Margin="0,0,10,0"/>
                <Button Content="✕"
                        Width="40" Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        Foreground="Black"
                        Click="ExitButton_Click"
                        ToolTip="Programm schließen"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
