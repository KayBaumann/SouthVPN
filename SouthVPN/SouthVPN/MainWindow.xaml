<Window x:Class="SouthVPN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouthVPN"
        mc:Ignorable="d"
        Title="SouthVPN"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#f0f0f0">

	<Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="0" Background="#1F2A40">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<StackPanel Margin="20" VerticalAlignment="Top">
					<TextBlock Text="Wähle einen Server:"
                               Foreground="White"
                               FontSize="18"
                               Margin="0,0,0,10"/>

					<ListBox x:Name="ServerListBox"
         Width="220"
         Background="White"
         BorderThickness="0"
         FontSize="14"
         SelectionMode="Single">
						<ListBoxItem Content="SouthVPN Server" IsSelected="True"/>
					</ListBox>

				</StackPanel>

				<StackPanel Margin="20" Grid.Row="1" VerticalAlignment="Bottom">
					<Button Content="Abmelden"
                            Width="220" Height="35"
                            Background="#246795"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="LogoutButton_Click"
                            Margin="0,0,0,10"/>
					<Button Content="Beenden"
                            Width="220" Height="35"
                            Background="Transparent"
                            BorderBrush="White"
                            Foreground="White"
                            Click="ExitButton_Click"/>
				</StackPanel>
			</Grid>

			<Grid Grid.Column="1">
				<Image Source="pic/main/background.png"
                       Stretch="UniformToFill"
                       Panel.ZIndex="0"/>

				<!-- Power Button -->
				<Button Click="ConnectButton_Click"
                        Width="200"
                        Height="200"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Grid>
								<Ellipse x:Name="ellipse"
                                         Fill="Transparent"
                                         StrokeThickness="2"
                                         Stroke="Transparent"/>
								<Image Source="pic/main/OnButton.png"
                                       Stretch="Uniform"/>
							</Grid>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="ellipse" Property="Stroke" Value="#246795"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Button.Template>
				</Button>

				<StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,80,0,0"
                            Panel.ZIndex="2">
					<TextBlock Text="Willkommen bei SouthVPN"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#246795"
                               Margin="0,0,0,10"
                               TextAlignment="Center"/>
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>
