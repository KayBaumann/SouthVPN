<Window x:Class="SouthVPN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouthVPN"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#f0f0f0">

    <Grid>
        <Button Content="✕" Width="40" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Background="Transparent" BorderBrush="Transparent" FontSize="16"
                Click="ExitButton_Click" ToolTip="Programm schließen"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Serverauswahl öffnen"
                    Width="200" Height="50" FontSize="16"
                    Margin="0,10" Click="OpenServerSelection_Click"/>
        </StackPanel>
    </Grid>
</Window>
