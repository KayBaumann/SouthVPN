<Window x:Class="SouthVPN.ServerSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serverauswahl" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Wähle einen Server:" FontSize="16" Margin="0,0,0,10"/>
        <ComboBox x:Name="serverComboBox" Height="30" Margin="0,0,0,10"/>
        <Button Content="Verbinden" Click="ConnectButton_Click" Height="30"/>
        <TextBlock x:Name="statusText" Margin="10" FontSize="14"/>
    </StackPanel>
</Window>
